                    //Filtering and displaying data
                    var Filtered_Region = s2coll.filterBounds(Region);
                    var Filt_Meta_Reg = Filtered_Region.filterMetadata('CLOUDY_PIXEL_PERCENTAGE', 'less_than',3)
                    var Filt_Date_Meta_Reg = Filt_Meta_Reg.filterDate('2017-01-01', '2021-01-01')
                    print(Filt_Date_Meta_Reg.size());

                    // equal to
                    var Filtered_Region2 = s2coll.filterBounds(Region)
                      .filterMetadata('CLOUDY_PIXEL_PERCENTAGE', 'less_than',0.5)
                      .filterDate('2019-01-01', '2020-01-01');

                    //displaying data
                    var Image_display = Filtered_Region2.first();
                    Map.addLayer(Image_display, param_vis);
